FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
castellatedMesh true;
snap            true;
addLayers       false;
#include "snappy_parameters"

geometry
{
    "tbwall.stl"
    {
        type    triSurfaceMesh;
        name    tbwall;
    }
};

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 20000000;
    minRefinementCells 10;
    maxLoadUnbalance 0.10;

    nCellsBetweenLevels 5;

    features 
    (
        { 
        file "tbwall.eMesh"; 
        level $refledge;
        }
    );

    refinementSurfaces
    {
        tbwall
        {
            level ($refl $reflcurvature);
        }
    }

    resolveFeatureAngle 30;

    refinementRegions
    {
    }

    locationInMesh (0.001 0.015 0);
    allowFreeStandingZoneFaces true;
}

snapControls
{
    nSmoothPatch 10;
    tolerance 4.0;
    nSolveIter 50;
    nRelaxIter 5;
    nFeatureSnapIter 20;
    implicitFeatureSnap true;
    explicitFeatureSnap false;
    multiRegionFeatureSnap false;
}

addLayersControls
{
    relativeSizes false;

    layers
    {
        tbwall
        {
            nSurfaceLayers 2;
        }
    }

    meshShrinker    displacementMotionSolver;
    solver          displacementLaplacian;
    displacementLaplacianCoeffs
    {
        diffusivity     inverseDistance (tbwall);
    }

    expansionRatio 1.0;
    finalLayerThickness $blthickness;
    minThickness 1e-6;
    nGrow 5;
    featureAngle 180;
    nRelaxIter 50;
    nSmoothSurfaceNormals 3;
    nSmoothNormals 5;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.3;
    minMedianAxisAngle 90;
    nBufferCellsNoExtrude 1;
    nLayerIter 100;
}

meshQualityControls
{
    maxNonOrtho 60;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minVol -1;
    minTetQuality -1;
    minArea -1;
    minTwist 0.01;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;
    minTriangleTwist -1;
    nSmoothScale 4;
    errorReduction 0.75;
    relaxed
    {
        maxNonOrtho 75;
    }
}

mergeTolerance 1e-6;

